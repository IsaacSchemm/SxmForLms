@model ChannelsModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=0" />
    <title>Channel List</title>
    @await Html.PartialAsync("_Styles")
    <style type="text/css">
        .box {
            border: 1px solid currentColor;
            display: inline-block;
            margin: 0.5em;
            overflow-y: scroll;
            vertical-align: top;
            width: 280px;
        }

        iframe[name=myframe] {
            border: 0;
            margin: 0.5em;
        }

        summary {
            background-color: steelblue;
            color: white;
            cursor: pointer;
            font-weight: bold;
            padding: 8px 0;
            user-select: none;
        }
    </style>
</head>
<body>
    @foreach (var channel in Model.Channels)
    {
        <div class="box">
            <details>
                <summary>@channel.Name</summary>

                @if (channel.ChannelNumber > 0)
                {
                    <p>
                        <a asp-controller="SXM" asp-action="ViewChannel" asp-route-num="@channel.ChannelNumber">
                            Go to channel
                        </a>
                    </p>
                }

                @foreach (var player in Model.Players)
                {
                    <p>
                        <form asp-action="Play" target="myframe">
                            <input type="hidden" name="mac" value="@player.MacAddress" />
                            <input type="hidden" name="url" value="@channel.Url" />
                            <input type="hidden" name="name" value="@channel.Name" />
                            <button type="submit">
                                Play on @player.Name
                            </button>
                        </form>
                    </p>
                }
            </details>
        </div>
    }

    <iframe name="myframe" width="300" height="50" src="about:blank"></iframe>
</body>
</html>
