@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=0" />
    <title>Radio Home Engine</title>
    @await Html.PartialAsync("_Styles")
</head>
<body>
    <h1>Radio Home Engine</h1>

    <p>
        <a href="/Radio/SiriusXM">
            SiriusXM
        </a>
    </p>

    <p>
        <a href="/Channels">
            List all available channels
        </a>
    </p>

    <h2>Squeezebox devices</h2>

    @foreach (var player in LyrionKnownPlayers.known)
    {
        string name = await LyrionCLI.Players.getNameAsync(player);
        <a asp-controller="Player" asp-action="Index" asp-route-id="@player.Item">
            @name (@player.Item)
        </a>
    }

    <p>
        <a href="http://@(Context.Request.Host.Host):9000">
            Lyrion Music Server
        </a>
    </p>

    <hr />

    <p>
        <small>
            Radio Home Engine
            <br />
            Copyright (c) 2025 Isaac Schemm
        </small>
    </p>
</body>
</html>
