@model Tuple<string, string>
<html>
    <head></head>
    <body style="opacity: 1">
        <small>@Model.Item1</small>
        <br />
        @Model.Item2

        <script type="text/javascript">
            setTimeout(function () {
                document.body.className += " fadeout";
            }, 2000);
        </script>

        <style type="text/css">
            .fadeout {
                animation: fadeout 0.5s linear forwards;
                user-select: none;
            }

            @@keyframes fadeout {
              100% { opacity: 0 }
            }
        </style>
    </body>
</html>
